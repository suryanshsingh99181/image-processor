{
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "./types"],
      "moduleResolution": "node",
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "types": ["node"]
      
    },
    "include": ["src/**/*"]
  }
  